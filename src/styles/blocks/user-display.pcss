.user-display {
  display: flex;
  align-items: center;
}

.user-display__avatar {
  margin-right: 35px;
}

.user-display__pic-wrapper {
  width: 74px;
  height: 74px;
  border-radius: 50%;
  overflow: hidden;
}

.user-display__name {
  font-size: 18px;
  font-weight: bold;
  margin-bottom: 16px;
}

.user-display__occ {
  color: rgba($text-color-light, 0.3);
  font-weight: 600;
}