.square-btns {
  display: flex;
  flex-direction: column;
}

.square-btns__item {
  width: 50px;
  height: 50px;

  &_next {
    background: svg-load('arrow-down.svg', fill=$text-color-light, width=10px, height=17px) center center no-repeat, #333C49;
  }
  &_prev {
    background: svg-load('arrow-down.svg', fill=$text-color-light, width=10px, height=17px) center center no-repeat, #333C49;
    transform: rotate(180deg);
  }
}