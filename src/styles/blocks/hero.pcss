.hero__container {
  height: 100vh;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  padding: 55px 0 20px;

  @include tablets {
    justify-content: start;
  }
}

.hero__bottom-buttons {
  display: flex;
  justify-content: center;

  @include tablets {
    display: none;
  }
}