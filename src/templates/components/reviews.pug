script(type="text/x-template")#reviews-container
  .reviews
    .reviews__header
      .reviews__title.section-title Что обо мне говорят
      .reviews__buttons
        button.reviews__btn.reviews__btn_prev(
          disabled
          ref="prevBtn"
          type="button"
          @click="slide('prev')"
        )
        button.reviews__btn.reviews__btn_next(
          ref="nextBtn"
          type="button"
          @click="slide('next')"
        )
    swiper(ref="mySwiper" :options="swiperOptions")
      swiper-slide(v-for="review in reviews", :key="review.id")
        .quote
          .quote__text
            p {{review.text}}
          .quote__user
            .user-display
              .user-display__avatar
                .user-display__pic-wrapper
                  img.user-display__avatar-pic(:src="review.photo")
              .user-display__info
                .user-display__name {{review.author}}
                .user-display__occ {{review.occ}}