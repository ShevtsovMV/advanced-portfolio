script(type="text/x-template")#skills-list
  ul.skills
    li.skills__item(v-for="category in skills" :key="category.id")
      skills-row(:category="category")
        

script(type="text/x-template")#skills-row
  .skills-row.skills__row
          .skills-row__title {{category.category}}
          ul.skills-row__list
            li.skill-row__item(v-for="skill in category.skills" :key="skill.id")
              skills-item(:skill="skill")
              
script(type="text/x-template")#skills-item
  .skill
    svg.skill__circle-shape(viewBox="0 0 100 100")
      circle.skill__circle.skill__circle_layer_under(cx="50", cy="50" r="40")
      circle.skill__circle.skill__circle_layer_above(cx="50", cy="50" r="40" ref="colored-circle" stroke="url(#gradient)" transform="rotate(180 50 50)")
      linearGradient(id="gradient" x1="0%" y1="0%" x2="100%" e2="0%")
        stop(offset="0%" stop-color="#EA7400")
        stop(offset="100%" stop-color="#F29400")
    .skill__title {{skill.title}}